{% extends "AppBundle::base.html.twig" %}

{% block main %}
<div class="content clearfix">
    <div class="container">
        <div class="content_title">Portfolio</div>

        <div class="row">
            {% for post in posts.posts %}
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="gallery_thumb">
                        <div class="gallery_thumb_pic">
                            <a href="{{ path('post', {id: post.id}) }}">
                                <img src="{{ post.thumb }}" alt="">
                            </a>
                        </div>
                        <div class="gallery_thumb_title">
                            <a href="{{ path('post', {id: post.id}) }}">{{ post.title }}</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {% include "AppBundle::pagination.html.twig" %}
    </div>
</div>
{% endblock main %}

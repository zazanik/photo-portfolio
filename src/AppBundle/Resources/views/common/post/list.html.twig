{% extends "AppBundle:common:base.html.twig" %}

{% block main %}
  <div class="content clearfix">
    <div class="container">
      <div class="content_title">Portfolio</div>

      <div class="row">
        {% for post in posts %}
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="gallery_thumb">
              <div class="gallery_thumb_pic">
                <a href="{{ path('single_post', { post: post.id}) }}">
                  <img src="{{ post.thumb }}" alt="">
                </a>
              </div>
              <div class="gallery_thumb_title">
                <a href="{{ path('single_post', { post: post.id}) }}">{{ post.title }}</a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      <div class="navigation text-center">
        {{ knp_pagination_render(posts) }}
      </div>
    </div>
  </div>
{% endblock main %}
